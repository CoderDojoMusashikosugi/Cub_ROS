<robot name="test_robot">
  <link name="base_footprint"/>
  <link name="base_link"/> <!-- 基準となる空のリンク -->
  
  <link name="body_link"> <!-- リンクの設定 -->
    <visual>
      <geometry>
        <box size="0.1 0.2 0.2"/> <!-- 見た目を長方形に設定 -->
      </geometry>
    </visual>
  </link>
  
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/> <!-- 見た目を円柱に設定 -->
      </geometry>
    </visual>
  </link>
  
  <joint name="bodytolaser" type="fixed">
    <parent link="body_link"/>
    <child link="laser"/>
    <origin rpy="0 0 3.14159"/> <!-- z軸周りに180度回転 -->
  </joint>
  
  <joint name="body_joint" type="fixed"> <!-- ジョイントの設定 -->
    <parent link="base_link"/> <!-- ジョイントの親を指定 -->
    <child link="body_link"/> <!-- ジョイントの子を指定 -->
  </joint>
  
  <joint name="footlinkjoint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>
</robot>
